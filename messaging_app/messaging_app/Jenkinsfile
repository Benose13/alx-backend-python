pipeline {
    agent {
        docker {
            image 'python:3.9-slim'  // Official Python Docker image
            reuseNode true  // Reuse the workspace from the main node
        }
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/master']],
                    extensions: [],
                    userRemoteConfigs: [[
                        url: 'https://github.com/Benose13/alx-backend-python.git',
                        credentialsId: '8a64003b-5bc1-4f5d-948f-b1afde73743d'  // Use your existing credential ID
                    ]]
                ])
            }
        }
        
        stage('Install dependencies') {
            steps {
                sh 'python --version'
                sh 'pip --version'
                sh 'pip install -r requirements.txt'
            }
        }
        
        stage('Run Tests') {
            steps {
                sh 'pytest --junitxml=test-results.xml --cov=./ --cov-report=xml'
            }
            post {
                always {
                    junit 'test-results.xml'
                    publishHTML([
                        target: [
                            allowMissing: false,
                            alwaysLinkToLastBuild: false,
                            keepAll: true,
                            reportDir: 'htmlcov',
                            reportFiles: 'index.html',
                            reportName: 'Coverage Report'
                        ]
                    ])
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline completed - check test results and coverage report'
        }
        failure {
            echo '❌ Pipeline failed — check logs and test report.'
        }
    }
}