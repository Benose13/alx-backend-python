pipeline {
    agent any

    environment {
        VENV_DIR = 'venv'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github_ssh_key',
                    url: 'git@github.com:Benose13/alx-backend-python.git'
            }
        }

        stage('Set up Python environment') {
            steps {
                script {
                    // Create Python virtual environment
                    sh '''
                    python3 -m venv ${VENV_DIR}
                    . ${VENV_DIR}/bin/activate
                    pip install --upgrade pip
                    pip install -r messaging_app/requirements.txt
                    '''
                }
            }
        }

        stage('Run Tests with pytest') {
            steps {
                script {
                    sh '''
                    . ${VENV_DIR}/bin/activate
                    pytest messaging_app/tests/ --junitxml=pytest-report.xml
                    '''
                }
            }
            post {
                always {
                    // Publish test results even if tests fail
                    junit 'pytest-report.xml'
                }
            }
        }

        stage('Archive Reports') {
            steps {
                archiveArtifacts artifacts: 'pytest-report.xml', fingerprint: true
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline completed successfully!'
        }
        failure {
            echo '❌ Pipeline failed — check logs and test report.'
        }
    }
}
